# ---------- App Mode ----------
AUTH_MODE=off  # off|on (off skips Clerk requirements at build time)

# ---------- Core ----------
# Postgres connection (Server only)
DATABASE_URL=postgres://user:pass@host:5432/db
# Supabase project URL + anon key (used by app server)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key
# JWT secret used by Supabase policies
SUPABASE_JWT_SECRET=replace_with_strong_secret
SUPABASE_SERVICE_ROLE_KEY=

# ---------- Auth (Clerk) ----------
# In OFF mode, real Clerk keys are not required to build.
CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=
CLERK_WEBHOOK_SIGNING_SECRET=
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/app
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/app

# ---------- AI / Storage ----------
OPENAI_API_KEY=sk-openai-xxx
GROK_API_KEY=sk-grok-xxx
R2_ACCOUNT_ID=acc_123
R2_BUCKET=redlineviral
R2_ACCESS_KEY_ID=AKIAxxxx
R2_SECRET_ACCESS_KEY=xxxx

# ---------- Redis / Queue ----------
REDIS_URL=https://eu1-fresh-witty-12345.upstash.io
BULLMQ_PREFIX=rv

# ---------- Security ----------
TURNSTILE_SITE_KEY=1x00000000000000000000AA
TURNSTILE_SECRET=1x0000000000000000000000000000000AA
WORKER_JWT_SECRET=use_a_min_32_chars_random_secret

# ---------- Analytics / Email / Logs ----------
RESEND_API_KEY=re_123
SENTRY_DSN=https://xxx.ingest.sentry.io/123  # optional
POSTHOG_API_KEY=phc_xxx

# ---------- Optional ----------
STRIPE_KEY=sk_test_xxx

# ---------- Client-safe (optional) ----------
# Any NEXT_PUBLIC_* variables will be exposed to the browser.
# Example (if you need it later):
# NEXT_PUBLIC_POSTHOG_KEY=phc_xxx_public
